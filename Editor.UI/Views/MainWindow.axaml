<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewportTwoD="clr-namespace:ViewportTwoD;assembly=ViewportTwoD"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Editor.UI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Editor.UI">

    <Grid RowDefinitions="* Auto">
		<viewportTwoD:Viewport Name="Viewport"
                               Figures="{Binding Figures}"/>
            
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock Text="X:" />
            <TextBlock Text="{Binding #Viewport.X, StringFormat={}{0:0.00}}"/>

            <TextBlock Text="Y:" Margin="5 0 0 0" />
            <TextBlock Text="{Binding #Viewport.Y, StringFormat={}{0:0.00}}"/>

		</StackPanel>
    </Grid>

</Window>